<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group">
    <label for="last_name">名前</label>
    <div class="row">
      <div class="col">
        <%= f.text_field :last_name, class: "form-control", maxlength: 100, placeholder: "令和" %>
      </div>
      <div class="col">
        <%= f.text_field :first_name, class: "form-control", maxlength: 100, placeholder: "道子" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="last_name_kana">フリガナ</label>
    <div class="row">
      <div class="col">
        <%= f.text_field :last_name_kana, class: "form-control", maxlength: 100, placeholder: "レイワ" %>
      </div>
      <div class="col">
        <%= f.text_field :first_name_kana, class: "form-control", maxlength: 100, placeholder: "ミチコ" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <label for="email">メールアドレス</label>
    <%= f.text_field :email, class: "form-control", maxlength: 254, placeholder: "aaaa@gmail.com" %>
  </div>

  <div class="form-group">
    <label for="post_code">郵便番号(ハイフンなし)</label>
    <%= f.text_field :post_code, class: "form-control", maxlength: 7, placeholder: "00000000" %>
  </div>

  <div class="form-group">
    <label for="address">住所</label>
    <%= f.text_field :address, class: "form-control", maxlength: 200, placeholder: "address" %>
  </div>

  <div class="form-group">
    <label for="phone_number">電話番号(ハイフンなし)</label>
    <%= f.text_field :phone_number, class: "form-control", maxlength: 21, placeholder: "0000000000" %>
  </div>

  <div class="form-group">
    <label for="password">パスワード</label>
    <%= f.password_field :password, class: "form-control", maxlength: 20, placeholder: "半角英数8文字以上" %>
  </div>

  <div class="form-group">
    <label for="password_confirmation">パスワード(確認用)</label>
    <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
  </div>

  <%= f.submit "新規登録", class: "btn btn-primary" %>
<% end %>

<%= render "public/shared/links" %>
