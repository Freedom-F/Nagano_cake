<div class="container" >

  <div class="row mt-2 mb-3 offset-1 text-center">
    <h1>マイページ</h1>
  </div>

    <div class="row">
    <div class="col-10 mx-auto">
      <div class="col-md-2 mb-2"><h3>登録情報</h3></div>
      <div class="col-md-2 mb-2"><%= link_to "編集する", edit_information_public_customer_path(@customer) %></div>

      <table class="table table-list">
        <tr>
          <td>氏名</td>
          <td><%= @customer.last_name + @customer.first_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.last_name_kana + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.post_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>

      <div><h4>配送先</h4></div>
      <div><%= link_to "一覧を見る", public_addresses_index_path %></div>

      <div><h4>注文履歴</h4></div>
      <div><%= link_to "一覧を見る", public_orders_show_path %></div>

</div>
