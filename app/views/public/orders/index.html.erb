<div>
    <h3>注文履歴一覧</h3>
      <table class="table table-bordered">
       <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>

        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
            <td>
              〒<%= order.post_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td>
              <ul class="list-unstyled">
                <% order.order_details.each do |order_detail|  %>
                  <li><%= order_detail.item.name %></li>
                <% end %>
              </ul>
            </td>
            <td><%= order.total_amount.to_i %>円</td>
            <td><%= order.status_i18n %></td>
            <td><%= link_to '詳細', order_path(order) %></td>
          </tr>
        <% end %>
      </tbody>
</table>
</div>