<div class="container">
  <div class="row address-box">
    <div class="col-md-12 address-main-box">
      <h3 class="mb-5 mt-5 address-title">配送先登録/一覧</h3>

      <div class="mb-5 address-container">
        <%= form_with model: @address, url:public_address_path(@address), method: :patch do |f| %>
          <div class="row mt-3 address-box">
            <div class="col-3 address-label">郵便番号(ハイフンなし)</div>
            <div class="col-3 address-from">
              <%= f.text_field :post_code, class: 'form-control mb-2', placeholder: "post_code" %>
            </div>
          </div>
          <div class="row address-box">
            <div class="col-3 address-label">住所</div>
            <div class="col-6 address-from">
              <%= f.text_field :address, class: 'form-control mb-2',placeholder: "address" %>
            </div>
          </div>
          <div class="row address-box">
            <div class="col-3 address-label">宛名</div>
            <div class="col-3 address-from">
              <%= f.text_field :name, class: 'form-control mb-2', placeholder: "name" %>
            </div>
            <div class="col-4 address-btn address-btn-right">
              <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>