<div class="container">
  <div class="row address-box">
    <div class="col-md-12 address-main-box">
      <h3 class="mb-5 mt-5 address-title">配送先登録/一覧</h3>

      <div class="mb-5 address-container">
        <%= form_with model: @address, url:public_addresses_path, class: 'address-box' do |f| %>
          <div class="row mt-3 address-box">
            <div class="col-3 address-label">郵便番号(ハイフンなし)</div>
            <div class="col-3 address-from">
              <%= f.text_field :post_code, class: 'form-control mb-2', placeholder: "0000000" %>
            </div>
          </div>
          <div class="row address-box">
            <div class="col-3 address-label">住所</div>
            <div class="col-6 address-from">
              <%= f.text_field :address, class: 'form-control mb-2',placeholder: "東京都渋谷区代々木神園町0-0" %>
            </div>
          </div>
          <div class="row address-box">
            <div class="col-3 address-label">宛名</div>
            <div class="col-3 address-from">
              <%= f.text_field :name, class: 'form-control mb-2', placeholder: "令和道子" %>
            </div>
            <div class="col-4 address-btn address-btn-right">
              <%= f.submit "新規登録", class: 'btn btn-success' %>
            </div>
          </div>
          <% end %>
      </div>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th class="table-secondary">郵便番号</th>
            <th class="table-secondary">住所</th>
            <th class="table-secondary">宛名</th>
            <th colspan="3" class="table-secondary"></th>
          </tr>
        </thead>
        <tbody>
          <% if @addresses.nil? %>
          <tr>
            <td>配送先が入力されていません</td>
          </tr>
        <% else %>

          <% @addresses.each do |address| %>
          <tr>
            <td><%= address.post_code %></td>
            <td><%= address.address %></td>
            <td class="text-nowrap"><%= address.name %></td>
            <td>
             <%= link_to "編集する", edit_public_address_path(address), class: "btn btn-success mr-1 address-btn" %>
             <%= link_to "削除する", public_address_path(address), method: :delete, "data-cofirm" => "本当に削除しますか？", class: "btn btn-danger mr-1 address-btn" %>
            </td>
          </tr>
          <% end %>
        <% end %>
        </tbody>
      </table>

   </div>
  </div>
</div>
