<%= render 'public/searches/genre' %>
<div class="container">
  <div class="row">

<h3>商品一覧</h3>
<p><%= Item.count %> 件の商品があります。</p>
</div>
 <div class="row">


          <% Item.all.each do |item| %>
              <div class="col-3">
            <%= link_to public_item_path(item) do %>
              <%= image_tag item.get_image %>
            <% end %>
            <h2><%= item.name %></h2>
          </div>
        <% end %>

      </div>
    </div>