<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render 'searches/genre' %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <h3>商品一覧</h3>
        <p><%= Item.count %> 件の商品があります。</p>
      </div>

      <div class="row">
        <% Item.all.each do |item| %>
          <div class="col-md-3">
            <div class="card mb-4">
              <%= link_to item_path(item) do %>
                <%= image_tag item.get_image, class: "card-img-top", style: "max-height: 200px; max-width: 200px;" %>

              <% end %>
              <div class="card-body">
                <h5 class="card-title"><%= item.name %></h5>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
