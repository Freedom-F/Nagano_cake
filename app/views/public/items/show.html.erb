<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="item-image">
       <%= image_tag @item.get_image, class: "img-fluid", style: "max-width: 100% !important; max-height: 100% !important;" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="item-info">
        <h2><%= @item.name %></h2>
        <p><%= @item.explanation %></p>
        <p>税込価格: <%= number_to_currency(@item.tax_excluded_price) %></p>
        <% if current_customer %>
          <%= form_with(model: @cart_item, url: cart_items_path, method: :post) do |form| %>
            <div class="form-group">
              <%= form.label :amount, "個数選択" %>
              <%= form.number_field :amount, min: 1, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= form.hidden_field :item_id, value: @item.id %>
              <%= form.submit 'カートに追加' %>
            </div>
          <% end %>
        <% else %>
          <p>ログインしていないとカートに追加できません。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
