<div class="genre_search d-flex justify-content-start">
  <table class="table">
    <tr>
      <th>ジャンル検索</th>
    </tr>

    <%= form_with url: public_genre_search_path, method: :get do |f| %>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= link_to genre.name, public_genre_search_path(id: genre.id), method: :get %></td>
        </tr>
      <% end %>
    <% end %>

  </table>
</div>
