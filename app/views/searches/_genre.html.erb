<div class="col-xs-3">
  <div class="border-bottom mb-3">
    <h3 class="mb-0">ジャンル検索</h3>
  </div>
  <table class="table">
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= link_to genre.name, public_genre_search_path(id: genre.id), method: :get %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
