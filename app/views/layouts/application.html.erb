<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
     <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/82d7b2075d.js" crossorigin="anonymous"></script>

  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <a class="navbar-brand" href="/">
        <i class="fa-solid fa-cake-candles"></i>
        <span class="logo_text ml-3">Nagano Cake</span>
      </a>
      <div class="collapse navbar-collapse" id="navbarNav">
       <ul class="navbar-nav ml-auto">


            <% if admin_signed_in? %>
            <div class="row">
              <li class="ml-auto nav-item">
                <%= link_to admin_items_path do %>
                  <i class="fas fa-cookie-bite">商品一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_customers_path do %>
                  <i class="fas fa-users">会員一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_root_path do %>
                  <i class="fas fa-clipboard-list">注文履歴一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_genres_path do%>
                  <i class="fas fa-tags">ジャンル一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_admin_session_path, method: :delete do %>
                  <i class="fas fa-sign-out-alt mr-2">ログアウト</i>
                <% end %>
              </li>

              <div class="search-form col-4 mt-2 ml-auto">
                <form>
                  <input type="text" name="q" placeholder="Search">
                  <button type="submit", class="fa-solid fa-magnifying-glass"></button>
                </form>
              </div>
            </div>

          <% elsif customer_signed_in? %>
            <div class="row">
              <li class="ml-auto nav-item">
                <%= link_to customers_mypage_path do %>
                <i class="fa-solid fa-image-portrait">マイページ</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to items_path do %>
                <i class="fa-solid fa-cookie-bite">商品一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to cart_items_path do %>
                <i class="fa-solid fa-cart-shopping">カート</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_customer_session_path, method: :delete do %>
                <i class="fa-solid fa-right-from-bracket mr-3">ログアウト</i>
                <% end %>
              </li>
  
  
              <div class="search-form col-5 mt-2 ml-auto">
                <form>
                  <input type="text" name="q" placeholder="Search">
                  <button type="submit", class="fa-solid fa-magnifying-glass"></button>
                </form>
              </div>
            </div>

          <% else %>
            <li class="nav-item">
              <%= link_to public_about_path do %>
              <i class="fa-solid fa-eject">about</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to items_path do %>
              <i class="fa-solid fa-cookie-bite">商品一覧</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to  new_customer_registration_path do %>
              <i class="fa-solid fa-right-to-bracket">新規登録</i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_customer_session_path do %>
              <i class="fa-solid fa-arrow-right-to-bracket">ログイン</i>
              <% end %>
            </li>

          <% end %>

      </ul>
    </div>
  </nav>
    </header>

      <div class="container">
  		   <div class="col-xs-12 col-sm-12 col-md-12 mt-2 mt-sm-5">
          <% flash.each do |key, value| %>
            <p class="alert alert-<%= key %>">
              <%= sanitize value, tags: %w(br) %>
            </p>
          <% end %>
         </div>
      </div>

</div>
    <%= yield %>
    <footer>
   </footer>
  </body>

</html>
