<div class="container mt-5 mb-5">
	<div class="row text-center text-xs-center text-sm-left text-md-left ">
    <div class="col-xs-12 col-sm-6 col-md-6 mx-auto text-right">
      <h2>商品詳細</h2>
    <% if @item.image.attached? %>
  　　<%= image_tag @item.image %>
　　<% else %>
  　　<%= image_tag 'no_image.jpeg' %>
　　<% end %>
     
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 item-details mx-auto">
      <h2><strong><%= @item.name %></strong></h2>
      <h4><%= simple_format(@item.explanation)%></h4>
      <%  if @item.is_sold_out == true %>
        <p class="text-success">販売中</p>
        <h3> <%= number_to_currency(@item.tax_excluded_price, unit: "¥", format: "%u %n" ) %> (税込)</h3>
      <% else %>
        <h3 class="text-danger">販売停止中です</h3>
      <% end %>
      <%= link_to "編集する", edit_admin_item_path, class:"btn btn-success" %>
      </div> 
  </div>
</div>