<div class="container">
  <div class="row">
    <div class="col-12">
      <label class="h2 mt-4">注文履歴一覧</label>
      
      <table class="table table-hover table-inverse mt-3">
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at %></td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td><%= order.order_details.count %></td>
            <td><%= order.status %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>