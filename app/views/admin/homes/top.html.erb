<div class="container">
  <div class="row">
    <div class="col-12">
      <label class="h2 mt-4 mb-3">注文履歴一覧</label>
      
      <table class="table table-hover table-inverse">
        <thead class="thead-light">
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order), class: "text-dark" do %>
                <u><%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %></u>
              <% end %>
            </td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td><%= order.order_details.count %></td>
            <td><%= order.status_i18n %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      <div class="d-flex justify-content-center"><%= paginate @orders %></div>
    </div>
  </div>
</div>