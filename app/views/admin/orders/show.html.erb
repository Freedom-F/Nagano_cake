<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="mt-4 mb-3">注文履歴詳細</h2>
      
      <table class="table table-borderless">
        <tr>
          <th class="col-2">購入者</th>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td><%= @order.address %></br><%= @order.name %></td>
