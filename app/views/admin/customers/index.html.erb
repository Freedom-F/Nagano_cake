<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="mt-4 mb-3">会員一覧</h2>
      
      <table class="table table-hover">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td>
                <%= link_to admin_customer_path(customer), class: "text-dark" do %>
                  <u><%= customer.last_name + customer.first_name %></u>
                <% end %>
              </td>
              <td><%= customer.email %></td>
              
              <% delete = Customer.select("is_deleted").find_by(id: customer.id) %>
              <% if delete.is_deleted %>
                <td class="text-secondary">退会</td>
              <% else %>
                <td class="text-success">有効</td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <div class="d-flex justify-content-center">
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</div>